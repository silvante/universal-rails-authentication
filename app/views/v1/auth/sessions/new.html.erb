<div class="w-full text-center space-y-2 mb-5">
  <h2 class="text-2xl font-semibold">Sign in</h2>
  <p class="">if you dont have an account, <%= link_to "sign up", sign_up_path, class: "text-blue-600" %></p>
</div>
<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<%= form_with(url: sign_in_path, class: "space-y-4") do |form| %>
  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "bg-white/10 rounded-xl outline-none w-full" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", class: "bg-white/10 rounded-xl outline-none w-full" %>
  </div>

  <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "text-blue-600 block" %>

  <div>
    <%= form.submit "Sign in", class: "base_bg w-full py-2 rounded-xl font-semibold" %>
  </div>
<% end %>